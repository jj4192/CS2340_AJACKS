<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ajacks.cs2340.edu.gatech.cs2340_ajacks.controllers.LoginScreen">

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="100dp"
        android:layout_height="17dp"
        android:text="Password"
        app:layout_constraintBottom_toTopOf="@+id/tb_password"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="0dp" />

    <EditText
        android:id="@+id/tb_username"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_password"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="100dp"
        android:layout_height="17dp"
        android:text="Username"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tb_username"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="-122dp" />

    <EditText
        android:id="@+id/tb_password"
        android:layout_width="215dp"
        android:layout_height="43dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_password"
        app:layout_constraintHorizontal_bias="0.502"
        android:layout_marginBottom="-131dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Cancel"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="70dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="Login"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="70dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
