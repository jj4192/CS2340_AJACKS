<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ajacks.cs2340.edu.gatech.cs2340_ajacks.controllers.LoginScreen">

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="100dp"
        android:layout_height="17dp"
        android:layout_marginBottom="0dp"
        android:text="Username"
        app:layout_constraintBottom_toTopOf="@+id/tb_username"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="352dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginLeft="86dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/tb_username"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="352dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="32dp"
        android:layout_marginLeft="86dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="142dp" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="100dp"
        android:layout_height="17dp"
        android:text="Password"
        tools:layout_conversion_absoluteHeight="16dp"
        tools:layout_conversion_absoluteWidth="352dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="75dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tb_username"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tb_password"
        android:layout_marginLeft="86dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/tb_password"
        android:layout_width="212dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_conversion_absoluteHeight="42dp"
        tools:layout_conversion_absoluteWidth="352dp"
        tools:layout_conversion_absoluteX="16dp"
        tools:layout_conversion_absoluteY="91dp"
        android:layout_marginLeft="86dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="242dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="347dp"
        android:onClick="onClick_btn_login"
        android:text="Login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="88dp"
        tools:layout_conversion_absoluteX="78dp"
        tools:layout_conversion_absoluteY="134dp" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:onClick="onClick_btn_cancel"
        android:text="Cancel"
        tools:layout_conversion_absoluteX="218dp"
        tools:layout_conversion_absoluteY="282dp"
        tools:layout_conversion_absoluteWidth="88dp"
        tools:layout_conversion_absoluteHeight="48dp"
        android:layout_marginLeft="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="347dp" />

</android.support.constraint.ConstraintLayout>
